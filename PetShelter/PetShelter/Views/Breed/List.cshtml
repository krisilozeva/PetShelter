@model IEnumerable<PetShelter.ViewModels.BreedDetailsVM>

 @{ViewBag.Title = "Index";}

 <h2>Index</h2>
 <p>
     @Html.ActionLink("Create New","Create")
 </p>
 <table class="table">
     <tr>
         <th>
             @Html.DisplayNameFor(model => model.Name)
         </th>
         <th>
             @Html.DisplayNameFor(model => model.Size)
         </th>
         <th>
            @Html.DisplayNameFor(model => model.Pets)
         </th>
         <th>Actions</th>
     </tr>
     @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayNameFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayNameFor(modelItem => item.Size)
                </td>
                <td>
                    @Html.DisplayNameFor(modelItem => item.Pets.Count)
                </td>
                <td>
                    @Html.ActionLink("Edit","Edit",new{id = item.Id}) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                </td>
            </tr>
        }
    </table>
