@using PetShelter.Shared.Enums
@using System.Security.Claims
@model IEnumerable<PetShelter.ViewModels.PetDetailsVM>

@{
    ViewBag.Title = "Index";
}
<h2>Index</h2>
<p>
    @if (Context.User?.FindFirst(ClaimTypes.Role)?.Value == UserRole.Employee.ToString() ||

    Context.User?.FindFirst(ClaimTypes.Role)?.Value == UserRole.Admin.ToString())
    {
        @Html.ActionLink("Create New", "Create")
    }
    else if (Context.User?.FindFirst(ClaimTypes.Role)?.Value == UserRole.User.ToString())
    {
        @Html.ActionLink("Give Pet", "GivePet")
    }


</p>
<h2>Index</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Color)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsAdopted)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsEuthanized)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PetTypeId)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.BreedId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShelterId)
        </th>
        <th>Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayNameFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayNameFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayNameFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayNameFor(modelItem => item.IsAdopted)
            </td>
            <td>
                @Html.DisplayNameFor(modelItem => item.IsEuthanized)
            </td>
            <td>
                @Html.DisplayNameFor(modelItem => item.PetTypeId)
            </td>
            <td>
                @Html.DisplayNameFor(modelItem => item.BreedId)
            </td>
            <td>
                @Html.DisplayNameFor(modelItem => item.ShelterId)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                @Html.ActionLink("Adopt Pet", "AdoptPet", new { id = item.Id })|
                @Html.ActionLink("Vaccinate Pet", "VaccinatePet", new { petId = item.Id })|
            </td>
        </tr>
    }
</table>
